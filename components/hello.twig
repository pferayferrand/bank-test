<!doctype html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>Boilerplate for Slim Framework 3</title>
	<style>
		@import url(//fonts.googleapis.com/css?family=Lato:700);

		body {
			margin:0;
			font-family:'Lato', sans-serif;
			text-align:center;
			color: #999;
		}

		.welcome {
			width: 300px;
			height: 200px;
			position: absolute;
			left: 50%;
			top: 50%;
			margin-left: -150px;
			margin-top: -100px;
		}

		a, a:visited {
			text-decoration:none;
		}

		h1 {
			font-size: 32px;
			margin: 16px 0 0 0;
		}
	</style>
	<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

</head>
<body>
<a href="{{ path_for('database') }}">
	<button>
		Databases
	</button>
</a>
<div class="welcome">
	<form name="form" method="post" action="{{ path_for('validate') }}">
		<div id="form">
			<div>
				<label for="form_shortcode" class="required">Shortcode</label>
				<input type="number" id="form_shortcode" name="shortcode" required="required"/>
			</div>
			<div>
				<label for="form_bank_account" class="required">Account number</label>
				<input type="number" id="form_bank_account" name="bank_account" required="required"/>
			</div>
			<div>
				<button type="submit" id="form_submit" name="submit">Submit</button>
			</div>
		</div>
	</form>
</div>
</body>
</html>